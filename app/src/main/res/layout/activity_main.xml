<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:padding="50dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cloudinary Application"
        android:textSize="31sp"
        android:textColor="#000000"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/captureImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Send Image"
        android:layout_marginTop="110dp"
        android:backgroundTint="#FFA000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView" />

    <Button
        android:id="@+id/captureVideoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send live Video"
        android:layout_marginTop="40dp"
        android:elevation="14dp"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:textColor="#0280FD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/captureImageButton" />

    <Button
        android:id="@+id/recordVoiceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Voice Record "
        android:backgroundTint="#00C853"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/captureVideoButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
